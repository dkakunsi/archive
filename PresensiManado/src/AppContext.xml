	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean"
		p:dataSource-ref="dataSource"
		p:configLocation="classpath:hibernate.cfg.xml"/>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager"
		p:sessionFactory-ref="sessionFactory"/>

	<jaxws:endpoint id="departmentWS"
		implementor="edu.dkakunsi.ta.presensi.web.service.impl.DepartmentWs"
		address="/DepartmentService" />

	<jaxws:endpoint id="pegawaiWS"
		implementor="edu.dkakunsi.ta.presensi.web.service.impl.PegawaiWs"
		address="/PegawaiService" />

	<jaxws:endpoint id="presensiWS"
		implementor="edu.dkakunsi.ta.presensi.web.service.impl.PresensiWs"
		address="/PresensiService" />

	<jaxws:endpoint id="izinWS"
		implementor="edu.dkakunsi.ta.presensi.web.service.impl.IzinWs"
		address="/IzinService" />

	<jaxws:endpoint id="lemburWS"
