<Application
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="tvkabel_wpf.App"
             StartupUri="LoginView.xaml">
    <Application.Resources>
         
    	<ResourceDictionary>
    		<ResourceDictionary.MergedDictionaries>
    			<ResourceDictionary Source="Simple Styles.xaml"/>
    		</ResourceDictionary.MergedDictionaries>
    		<Style x:Key="GlassButton" TargetType="{x:Type Button}">
    			<Setter Property="Template">
    				<Setter.Value>
    					<ControlTemplate TargetType="{x:Type Button}">
    						<Grid>
    							<Rectangle x:Name="BaseRect" Fill="Black" RadiusY="8.167" RadiusX="8.167" Stroke="Black" Opacity="0.3"/>
    							<Rectangle x:Name="GlassRect" RadiusY="8.167" RadiusX="8.167" Stroke="Black" Opacity="0.80">
    								<Rectangle.Fill>
    									<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
    										<GradientStop Color="White" Offset="0"/>
    										<GradientStop Offset="1"/>
    										<GradientStop Color="#C4FFFFFF" Offset="0.207"/>
    										<GradientStop Color="#26FFFFFF" Offset="0.246"/>
    									</LinearGradientBrush>
    								</Rectangle.Fill>
    							</Rectangle>
    							<ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
    						</Grid>
    						<ControlTemplate.Triggers>
    							<Trigger Property="IsFocused" Value="True"/>
    							<Trigger Property="IsDefaulted" Value="True"/>
    							<Trigger Property="IsMouseOver" Value="True">
									<Setter Property="Stroke" Value="White" TargetName="BaseRect"/>
									<Setter Property="Fill" Value="White" TargetName="BaseRect"/>
    							</Trigger>
    							<Trigger Property="IsPressed" Value="True">
									<Setter Property="Stroke" Value="#FF0B95A7" TargetName="BaseRect"/>
									<Setter Property="Fill" Value="#FF0B95A7" TargetName="BaseRect"/>
    							</Trigger>
    							<Trigger Property="IsEnabled" Value="False"/>
    						</ControlTemplate.Triggers>
    					</ControlTemplate>
    				</Setter.Value>
    			</Setter>
    		</Style>
			<Style x:Key="ImageButton" TargetType="{x:Type Button}">
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type Button}">
							<Grid>
								<Rectangle x:Name="BaseRect" Fill="#00000000" RadiusY="13.25" RadiusX="13.25"/>
								<Rectangle x:Name="FrontRect" RadiusY="13.25" RadiusX="13.25">
									<Rectangle.Fill>
										<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
											<GradientStop Color="#FFFBFBFB" Offset="0.12"/>
											<GradientStop Color="#00ABA8A8" Offset="0.35"/>
											<GradientStop Color="#8D858585" Offset="0.16"/>
											<GradientStop Color="#FFFBFBFB" Offset="0.88"/>
											<GradientStop Color="#8D858585" Offset="0.84"/>
											<GradientStop Color="#00ABA8A8" Offset="0.65"/>
										</LinearGradientBrush>
									</Rectangle.Fill>
								</Rectangle>
								<ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
							</Grid>
							<ControlTemplate.Triggers>
								<Trigger Property="IsFocused" Value="True"/>
								<Trigger Property="IsDefaulted" Value="True"/>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter Property="Stroke" Value="White" TargetName="BaseRect"/>
									<Setter Property="Fill" Value="White" TargetName="BaseRect"/>
								</Trigger>
								<Trigger Property="IsPressed" Value="True">
									<Setter Property="Stroke" Value="Black" TargetName="BaseRect"/>
									<Setter Property="Fill" Value="Black" TargetName="BaseRect"/>
								</Trigger>
								<Trigger Property="IsEnabled" Value="False"/>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>

    	</ResourceDictionary>
         
    </Application.Resources>
</Application>
